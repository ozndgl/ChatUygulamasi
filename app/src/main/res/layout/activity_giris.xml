<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#273c75"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".GirisActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="200dp"
        android:background="@drawable/afanda"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="kullanıcı adı giriniz"
        android:textColorHint="@color/colorAccent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/kullaniciAdiEditText"
        />

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="#e1b12c"
       android:textColor="#fff"
       android:id="@+id/kayitOlButton"
       android:textStyle="bold"
       android:layout_gravity="center"
       android:text="GirisYap"/>



</LinearLayout>